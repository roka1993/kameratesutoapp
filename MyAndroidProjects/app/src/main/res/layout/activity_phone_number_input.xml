<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.talk.myapp.wetalk.activitys.login.PhoneNumberInputActivity"
    android:background="@color/colorBackgroundPurple"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="输入手机号"
        android:textColor="@color/colorTextWhite"
        android:textSize="18sp"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="11"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle_edit_background"/>
    <TextView
        android:id="@+id/error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorChangePhoneNumberTextWhite"
        android:visibility="invisible"
        android:text="请输入正确的手机号码"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/next_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_rectangle_button_background"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/login_button_phone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="15sp"
            android:layout_marginRight="35dp"
            android:text="下一步"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
